<div class="main">
    <div>
        <h1>Log in</h1>
        {{#if loginFailed}}
            <div>
                <h2>Sorry, either the username or password is wrong</h2>
            </div>
        {{/if}}
        <div>
            <form action="/login" method="post">
                <fieldset style="width: fit-content;">
                    <label for="un">Username: </label><br>
                    <input type="text" name="un" id="un" required="required"><br>
                    <label for="pw">Password: </label><br>
                    <input type="password" name="pw" id="pw" required="required"><br>
                </fieldset>
                <input type="submit" value="Login">
            </form>
        </div>
    </div>
</div>